// base-layout
.layout {
  display: flex;
  flex-direction: column;
  flex: auto;
  background: #f5f7f9;
  min-height: 100vh;
  &-has-aside {
    flex-direction: row;
    > .layout {
      overflow-x: hidden;
    }
  }
  &-aside {
    background: #001529;
    transition: all .2s;
    position: relative;
    z-index: 10;
    min-height: 100%;
    box-shadow: 2px 0 6px rgba(0, 21, 41, .35);
    &.fixed-aside {
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      z-index: 10;
      box-shadow: 2px 0 6px rgba(0, 21, 41, .35);
    }
    .logo {
      position: relative;
      width: 100%;
      height: 48px;
      overflow: hidden;
      padding-left: 20px;
      border-bottom: 1px solid rgba(0, 21, 41, .05);
      .icon {
        height: 32px;
      }
      h1 {
        font-size: 20px;
        margin: 0 0 0 12px;
        white-space: nowrap
        color: #fff;
      }
    }
    &-children {
      height: calc(100% - 48px);
      overflow: hidden;
    }
  }
  &-main {
    min-height: 100vh;
  }
  &-content-wrap {
    position: relative;
    flex: auto;
    min-height: 0;
  }

}

// header
.layout-header {
  transition: width .2s;
  flex: 0 0 auto;
  &.fixed-header {
    position: fixed;
    top: 0;
    transition: width .2s;
    z-index: 5;
  }
  .global-header {
    display: flex;
    height: 48px;
    padding: 0;
    color: #fff;
    background-color: #fff;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 1px 4px rgba(0, 0, 0, .08);
    &-right {
      display: flex;
    }
    &-trigger {
      display: flex;
      height: 48px;
      padding: 0 10px;
      cursor: pointer;
      align-items: center;
      transition: background-color .2s;
      .b-iconfont {
        vertical-align: -.125em;
        font-size: 16px;
        color: rgba(0, 0, 0, .65);
      }
      &:hover {
        background-color: #f6f6f6;
        .b-iconfont {
          color: rgba(0, 0, 0, .85);
        }
      }
      &.light {
        &:hover {
          background-color: #f6f6f6;
        }
      }
    }
    &-avatar-trigger {
      display: flex;
      align-items: center;
      height: 48px;
      padding: 0 10px;
      cursor: pointer;
      outline: none;
      transition: background-color .2s;
      .avatar {
        width: 24px;
        border-radius: 50%;
        margin-right: 10px;
      }
      &:hover {
        background-color: #f6f6f6;
      }
    }
  }
}

// tags-view
.tags-view-container {
  display: flex;
  height: 32px;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  background-color: #ffffff;
  .bin-tabs-wrapper {
    margin: 0 8px;
    width: calc(100% - 64px);
    .nav-wrapper {
      height: 32px;
      .tab-list {
        margin-top: 3px;
      }
      .tab-item {
        height: 24px;
        line-height: 24px;
        margin-right: 5px;
        font-size: 13px;
        color: #808695;
        &::before {
          content: unset;
        }
        &:hover {
          color: var(--primary-color);
        }
        &.active {
          background: var(--primary-color);
          border-color: var(--primary-color);
          color: #ffffff;
          .b-icon-close {
            width: 14px;
            margin-left: 2px;
            color: #ffffff;
          }
          .b-icon-close:hover {
            color: #dddbdb;
          }
        }
      }
      .nav-prev, .nav-next {
        line-height: 32px;
      }
    }
    .contextmenu li {
      display: flex;
      align-items: center;
      i {
        margin-right: 4px;
      }
    }
  }
  .tags-view-ctrl {
    width: 64px;
    display: flex;
    .trigger {
      width: 32px;
      line-height: 32px;
      color: rgba(0, 0, 0, .45);
      text-align: center;
      cursor: pointer;
      border-left: 1px solid #eee;
      i {
        position: relative;
        top: -1px;
      }
      &:hover {
        color: rgba(0, 0, 0, .85);
      }
    }
  }
}

