
.bin-select__popper.bin-popper {
  padding: 4px 0;
  .bin-select-dropdown {
    padding: 0 4px;
  }
  .bin-select-dropdown__item {
    border-radius: 4px;
    &.selected {
      &::after {
        font-family: "b-iconfont" !important;
        font-style: normal;
        font-weight: normal;
        font-size: 14px;
        content: '\e886';
        color: var(--bin-color-primary-light1);
        position: absolute;
        top: 5px;
        right: 8px;
      }
    }
  }
}

.bin-dropdown__popper.bin-popper[role=tooltip] {
  padding: 4px 0;
  .bin-dropdown-menu {
    padding: 0 4px;
  }
  .bin-dropdown-item {
    border-radius: 4px;
  }
}
