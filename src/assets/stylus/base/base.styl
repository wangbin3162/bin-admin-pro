html, body {
  margin: 0;
  height: 100%;
}
body {
  height: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  user-select: none;
  color: #515a6e;
}
a, a:focus, a:hover {
  cursor: pointer;
  color: #1089ff;
  text-decoration: none;
}
#app {
  min-height: 100%;
}
